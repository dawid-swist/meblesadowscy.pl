<div class={{ classTypes }}>
    <div id={{ titleID }} class="section">
        <div class="row">
            <div class="col s12 center">
                <h4>{{ title }}</h4>
                <p class="left-align light">
                  {{#if imageUrl}}
                    <div class='col l4 s12'>
                      <img src={{ imageUrl }} alt={{ imageAlt }} class="responsive-img">
                    </div>
                    <div class="col l8 s12 article flow-text">{{{ body }}}</div>
                  {{else}}
                    <div class="col s12 article flow-text">{{{ body }}}</div>
                  {{/if}}
                </p>
            </div>
        </div>
    </div>
</div>
